{
  "compilerOptions": {
    "target": "es2021",
    "module": "CommonJS",
    "lib": ["es2021"],
    "outDir": "./build/",
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "sourceMap": true
  }
}
